{% extends "AppBundle:layouts:layout.html.twig" %}

{% block content %}

 <script src="{{ asset('node_modules/bootstrap/js/dist/custom/delete-users.js') }}"></script>
 <script type="text/javascript" >
 route_remove_user = '{{ path("remove_publication_admin") }}'; 
 </script>

 <header id="header">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Panel de Control <small> Administrador del sitio</small></h1>
      </div>
    </div>
  </div>
</header>


<section id="breadcrumb">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active"></li>
    </ol>
  </div>
</section>

<section id="main">
  <div class="container">
    <div class="row">
      <!-- últimos publicaciones -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Últimos Publicaciones</h3>
        </div>
        <div class="panel-body">
          <table class="table table-responsive table-hover">
           <thead>
            <tr>
             <th>Id</th>
             <th>Usuario</th>
             <th>Texto</th>
             <th>Imagen</th>
             <th>Fecha de creación</th>
           </tr>
         </thead>
         {% for publication in publications %}
          <tr data-id="{{ publication.id }}">
           <td>{{ publication.id }}</td>
           <td>{{ publication.user }}</td>
           <td>{{ publication.texto }}</td>
           <td>{{ publication.image }}</td>
           <td>{{ publication.createdAt | date("d/m/Y") }}</td>
           <td class="actions">



            <td><a href="{{ path('remove_publication_admin', { id: publication.id }) }}" class="btn btn-sm btn-danger btn-delete">
             Eliminar
           </a></td>

         </td>
       </tr>
     {% endfor %}
   </table>
 </div>
</div>
</div>
</div>
</div>
</section>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>


  {% endblock %}